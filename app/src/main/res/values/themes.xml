<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamenMoviles" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dragonball</item> <!-- Color primario inspirado en Dragon Ball -->
        <item name="colorPrimaryVariant">@color/orange_dragonball</item> <!-- Variante del color primario -->
        <item name="colorOnPrimary">@color/white</item> <!-- Color de texto en el color primario -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_dragonball</item> <!-- Color secundario -->
        <item name="colorSecondaryVariant">@color/yellow_dragonball</item> <!-- Variante del color secundario -->
        <item name="colorOnSecondary">@color/black</item> <!-- Color de texto en el color secundario -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
